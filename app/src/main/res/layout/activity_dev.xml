<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DevActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="18dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Developers"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_below="@id/app_bar"
        android:id="@+id/dev"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/nav"
                    android:padding="16dp"
                    android:elevation="8dp"
                    android:background="@drawable/devbg"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/navaneeth"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/android"
                            android:layout_width="38dp"
                            android:layout_height="38dp" />

                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Navaneeth K\n2016-2020"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Android &amp; Backend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="end"
                            android:src="@drawable/instagram"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/arv"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:elevation="8dp"
                    android:background="@drawable/devbg"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/android"
                            android:layout_width="38dp"
                            android:layout_height="38dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Aravind Balakrishnan\n2016-2020"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Android &amp; Design"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="end"
                            android:src="@drawable/instagram"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_weight="1"
                        android:src="@drawable/aravind"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:background="@drawable/devbg"
                        android:elevation="8dp"
                        android:id="@+id/don"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:src="@drawable/donatto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Donatto\n2016-2020"
                            android:textColor="@color/textblack" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Web Head"
                            android:textColor="@color/textblack" />
                        <ImageView
                            android:layout_gravity="end"
                            android:src="@drawable/instagram"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rah"
                        android:background="@drawable/devbg"
                        android:elevation="8dp"
                        android:padding="4dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/rahul"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="120dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Rahul C\n2016-2020"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_gravity="end"
                            android:src="@drawable/instagram"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/jick"
                        android:padding="4dp"
                        android:background="@drawable/devbg"
                        android:elevation="8dp"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/sreejith"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="120dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Sreejith\n2016-2020"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_gravity="end"
                            android:src="@drawable/instagram"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/sreekanth_layout"
                        android:padding="4dp"
                        android:background="@drawable/devbg"
                        android:elevation="8dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/sreekanth"
                            android:layout_gravity="center"
                            android:layout_width="120dp"
                            android:layout_height="120dp" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Sreekanth\n2016-2020"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/textblack"
                            android:text="Web &amp; Design"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="end"
                            android:src="@drawable/instagram"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:id="@+id/aks"
                    android:elevation="8dp"
                    android:padding="4dp"
                    android:background="@drawable/devbg"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/akshay"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="120dp"
                            android:src="@drawable/akshay"
                            android:layout_height="120dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/textblack"
                            android:gravity="center_horizontal"
                            android:text="Akshay Pradeep P L" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/textblack"
                            android:gravity="center_horizontal"
                            android:text="Design Aid"
                            android:textSize="15dp" />

                        <ImageView
                            android:src="@drawable/instagram"
                            android:layout_gravity="right"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>